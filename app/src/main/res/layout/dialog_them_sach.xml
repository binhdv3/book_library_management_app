<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#00BCD4">
    <EditText
        android:id="@+id/ed_maS"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Mã thành viên"
        android:background="@drawable/boder_textview"/>
    <EditText
        android:id="@+id/ed_tenS"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Tên sách"
        android:background="@drawable/boder_textview"/>
    <EditText
        android:id="@+id/ed_giathueS"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Giá thuê"
        android:inputType="number"
        android:background="@drawable/boder_textview"/>
    <EditText
        android:id="@+id/ed_soTrang"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Số trang"
        android:inputType="number"
        android:background="@drawable/boder_textview"/>
    <Spinner
        android:id="@+id/sp_loaisach"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
       />
    <Button
        android:id="@+id/btn_save_s"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@drawable/boder_button"/>
</LinearLayout>