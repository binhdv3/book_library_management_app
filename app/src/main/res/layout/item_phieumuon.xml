<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    >
    <LinearLayout
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_maPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma phieu muon"
            android:textSize="16dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_maTV_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ma thanh vien "
            android:textSize="22dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_maS_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ma sach "
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_ngaythue_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ngay thue "
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_tienthue_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tien thue "
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_trasach_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tra sach "
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_deletePM"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        />
</LinearLayout>